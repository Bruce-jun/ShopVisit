<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingBottom="6dp"
              android:paddingTop="6dp">

    <android.support.v7.widget.CardView
        android:id="@+id/home_new_item_cv"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="100dp"
        android:layout_height="60dp"
        app:cardCornerRadius="12dp">

        <ImageView
            android:id="@+id/home_new_item_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/home_new_item_cv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home_new_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#b000"
            android:textSize="16sp"/>

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/home_new_item_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="12sp"
            android:textColor="#8000"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/home_new_item_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/right"/>
    <View
        android:id="@+id/home_new_item_line"
        android:layout_below="@+id/home_new_item_cv"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>
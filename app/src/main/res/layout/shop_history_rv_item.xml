<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="64dp"
              android:background="@color/white"
    android:id="@+id/shop_item_root">
    <TextView
        android:id="@+id/shop_item_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="巡店日期:"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/shop_item_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/shop_item_date"
        android:text="店面名称"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        />

    <ImageView
        android:id="@+id/shop_item_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/shop_item_date"
        android:src="@drawable/right"
        android:layout_centerVertical="true"/>

   <View
        android:id="@+id/shop_item_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#66999999"
        android:layout_alignParentBottom="true"
     />
</RelativeLayout>